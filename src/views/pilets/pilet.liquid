{% comment %} 
{
  "id": 52,
  "piletId": 1,
  "meta": {},
  "version": "1.91.18",
  "root": "dist/index.js",
  "integrity": "sha256-rOFsh0u2tA7u3H+Pe+NRl6wvQH37papT8T2k3CSMOVY=",
  "link": "/b3000-fe-engine/1.91.18/index.js",
  "spec": "v2",
  "enabled": true,
  "pilet": {
    "id": 1,
    "name": "b3000-fe-engine",
    "meta": {},
    "enabled": true
  }
} 
{% endcomment %}

<tr>
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">{{ piletV.piletId }}</td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900 font-bold">{{ piletV.pilet.name }}</td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ piletV.version }}</td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <div class="flex items-center text-center mx-auto justify-center">
      {% if piletV.pilet.enabled %}
        <span class="rounded-full bg-green-600 w-6 h-6"></span>
      {% endif %}
    </div>
  </td>
  <td class="text-center px-3 py-4 text-sm text-gray-500">
    <div class="text-xs">
      {{ piletV.createdAt | date: "%Y-%m-%d %H:%M" }}
    </div>
  </td>
  <td class="relative whitespace-nowrap py-2 pl-3 pr-4 text-right text-sm font-medium ">
    <div class="inline-flex gap-x-4">
        <form class="my-1" method="post" action="/admin/pilets/{{ piletV.piletId }}/trigger">
          {% if piletV.pilet.enabled %}
              {% render 'ui/button.liquid', type: 'danger', title : 'Disable' %}
          {% else %}
              {% render 'ui/button.liquid',type: 'success', title : 'Enable' %}
          {% endif %}
        </form>

        {% capture link %}/admin/pilets/{{ piletV.piletId }}/versions{% endcapture %}
        {% render 'ui/button_link.liquid', title : 'View Versions', link : link %}
    </div>
  </td>
</tr>